package ex01;

public class ForEx02 {

	public static void main(String[] args) {
		
		int sum=0;
		int i=1 ;
		
		for( ; i<=100; ) {
			System.out.println("i : " + i);
			if (i%2 == 0) {
				//System.out.println("i : " + i);
				sum += i++;
			} else  i++;
			
			//i++;
		}

		System.out.println("í•© : " + sum);
	}

}