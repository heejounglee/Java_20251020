package ex04;

import java.util.Arrays;

/* 
 * 1. 배열 10개 방에 랜덤하게 1~100 사이 값을 저장
 * 2. 배열에서 최대값, 최소값을 출력
 * 3. 10개 값 총점 / 평균 구하기
 * 4. 10개 값 정렬 (오름차순)
 */
public class 연습문제 {

	public static void main(String[] args) {
		int []arrNum = new int[10];
		int []sortNum = new int[10];
		int maxNum, minNum;
		
		int sum = 0, average;
		for (int i=0; i<arrNum.length; i++) {
			arrNum[i] = (int)(Math.random() * 100) + 1;
		    sum += arrNum[i]; 
		}
		average = sum / arrNum.length;
		
		System.out.println(Arrays.toString(arrNum));
		System.out.println("총점 : " + sum + " 평균 : " + average);
		
		maxNum = arrNum[0];
		minNum = arrNum[0];
		for (int i=1; i<=arrNum.length-1; i++) {
		    if (maxNum < arrNum[i]) {
		    	maxNum = arrNum[i];
		    }
		    
		    if (minNum > arrNum[i]) {
		    	minNum = arrNum[i];
		    }
		}
		System.out.println("최대값 : " + maxNum + " 최소값 : " + minNum);
		
	}

}
