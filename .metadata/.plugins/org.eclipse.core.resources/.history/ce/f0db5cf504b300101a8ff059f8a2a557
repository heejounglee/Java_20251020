package ex03;

import java.util.Arrays;

public class LottoEX01 {

	public static void main(String[] args) {
		/*
		 * 로또 프로그램
		 * 배열 : 6칸짜리 int 배열
		 * 로또는 1~45 랜덤하게 저장
		 * 단, 중복불가
		 */
		int[] lotto = new int[6];
		boolean chk = false;
		
		for (int i=0; i<lotto.length; i++) {
			int tmp = (int)(Math.random()*45)+1;

			for(int j=1; j<=i; j++) {
				if(tmp == lotto[j]) {
					//chk = true;
					i--;
					break;
				} else {
					lotto[i] = tmp;
				}
			}
			
			/*
			if (chk == false) {
				lotto[i] = tmp;
			} else {
				i--;
				chk = false;
			} */
		}
		
		System.out.println(Arrays.toString(lotto));
	}

}
