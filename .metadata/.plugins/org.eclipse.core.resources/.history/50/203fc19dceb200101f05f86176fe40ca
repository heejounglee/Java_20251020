package ex01;

import java.util.Scanner;

public class WhileSample {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num = 0;
		while (num !=4) {
			System.out.println("----------------------");
			System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
			System.out.println("----------------------");
			System.out.print("선택> ");
			num = Integer.parseInt(sc.nextLine());
		}
	}

}
